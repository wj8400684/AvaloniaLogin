<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    <Style Selector="UserControl.nav">
        <Setter Property="Background" Value="{DynamicResource PageBackground}"/>
        <Setter Property="Width" Value="230"/>
        <Setter Property="Height" Value="270"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="BorderBrush"></Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowDirectionEffect ShadowDepth="0.5" Opacity="0.2" />
            </Setter.Value>
        </Setter>
    </Style>
</Styles>
